<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- 
        Plan Comptable OHADA pour la Gestion des Stocks
        Ces comptes sont créés pour faciliter la valorisation automatique des stocks
        -->
        
        <!-- ========================================= -->
        <!-- CLASSE 3 : COMPTES DE STOCKS -->
        <!-- ========================================= -->
        
        <!-- 31 - Marchandises -->
        <record id="account_stock_merchandise" model="account.account">
            <field name="code">31</field>
            <field name="name">Marchandises</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
            <field name="note">Compte de valorisation des stocks de marchandises</field>
        </record>
        
        <!-- 311 - Marchandises A -->
        <record id="account_stock_merchandise_a" model="account.account">
            <field name="code">311</field>
            <field name="name">Marchandises A</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
        </record>
        
        <!-- 32 - Matières premières et fournitures liées -->
        <record id="account_stock_raw_materials" model="account.account">
            <field name="code">32</field>
            <field name="name">Matières premières et fournitures liées</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
            <field name="note">Compte de valorisation des stocks de matières premières</field>
        </record>
        
        <!-- 321 - Matières A -->
        <record id="account_stock_raw_materials_a" model="account.account">
            <field name="code">321</field>
            <field name="name">Matières A</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
        </record>
        
        <!-- 33 - Autres approvisionnements -->
        <record id="account_stock_supplies" model="account.account">
            <field name="code">33</field>
            <field name="name">Autres approvisionnements</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
            <field name="note">Compte de valorisation des fournitures et approvisionnements</field>
        </record>
        
        <!-- 35 - Stocks de produits -->
        <record id="account_stock_finished_goods" model="account.account">
            <field name="code">35</field>
            <field name="name">Stocks de produits</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
            <field name="note">Compte de valorisation des stocks de produits finis</field>
        </record>
        
        <!-- 351 - Produits finis -->
        <record id="account_stock_finished_goods_a" model="account.account">
            <field name="code">351</field>
            <field name="name">Produits finis</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
        </record>
        
        <!-- ========================================= -->
        <!-- CLASSE 6 : COMPTES DE CHARGES -->
        <!-- ========================================= -->
        
        <!-- 603 - Variation des stocks de biens achetés -->
        <record id="account_stock_input_merchandise" model="account.account">
            <field name="code">603</field>
            <field name="name">Variation des stocks de marchandises</field>
            <field name="account_type">expense</field>
            <field name="reconcile">False</field>
            <field name="note">Compte de contrepartie pour les entrées de marchandises</field>
        </record>
        
        <!-- 6031 - Variation des stocks de matières premières -->
        <record id="account_stock_input_raw_materials" model="account.account">
            <field name="code">6031</field>
            <field name="name">Variation des stocks de matières premières</field>
            <field name="account_type">expense</field>
            <field name="reconcile">False</field>
        </record>
        
        <!-- 6032 - Variation des autres approvisionnements -->
        <record id="account_stock_input_supplies" model="account.account">
            <field name="code">6032</field>
            <field name="name">Variation des autres approvisionnements</field>
            <field name="account_type">expense</field>
            <field name="reconcile">False</field>
        </record>
        
        <!-- ========================================= -->
        <!-- CLASSE 7 : COMPTES DE PRODUITS -->
        <!-- ========================================= -->
        
        <!-- 713 - Variation des stocks de biens et services produits -->
        <record id="account_stock_output_finished_goods" model="account.account">
            <field name="code">713</field>
            <field name="name">Variation des stocks de produits</field>
            <field name="account_type">income</field>
            <field name="reconcile">False</field>
            <field name="note">Compte de contrepartie pour les sorties de produits finis</field>
        </record>
        
        <!-- 7131 - Variation des stocks de produits finis -->
        <record id="account_stock_output_finished_goods_a" model="account.account">
            <field name="code">7131</field>
            <field name="name">Variation des stocks de produits finis</field>
            <field name="account_type">income</field>
            <field name="reconcile">False</field>
        </record>
        
        <!-- ========================================= -->
        <!-- CLASSE 3 : COMPTES D'ÉCARTS ET PROVISIONS -->
        <!-- ========================================= -->
        
        <!-- 38 - Écarts de conversion - Actif -->
        <!-- Note: En OHADA, le compte 38 est normalement pour écarts de conversion,
             mais nous l'utilisons ici pour les écarts de prix sur stocks selon
             les pratiques comptables de gestion des stocks -->
        
        <!-- 381 - Écarts sur prix d'achat (Mali) -->
        <record id="account_price_difference_loss" model="account.account">
            <field name="code">381</field>
            <field name="name">Écarts de prix sur achats (Mali)</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
            <field name="note">Compte pour enregistrer les écarts défavorables (pertes) entre prix standard et prix réel d'achat</field>
        </record>
        
        <!-- 382 - Écarts sur prix d'achat (Boni) -->
        <record id="account_price_difference_gain" model="account.account">
            <field name="code">382</field>
            <field name="name">Écarts de prix sur achats (Boni)</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile">False</field>
            <field name="note">Compte pour enregistrer les écarts favorables (gains) entre prix standard et prix réel d'achat</field>
        </record>
        
        <!-- Alternative: Utilisation du compte 658 pour les écarts (Charges diverses) -->
        <!-- 658 - Charges diverses de gestion courante -->
        <record id="account_price_difference_expense" model="account.account">
            <field name="code">658</field>
            <field name="name">Charges diverses de gestion courante</field>
            <field name="account_type">expense</field>
            <field name="reconcile">False</field>
            <field name="note">Compte alternatif pour les écarts de prix (méthode simplifiée)</field>
        </record>
        
        <!-- ========================================= -->
        <!-- COMPTES PAR DÉFAUT RECOMMANDÉS -->
        <!-- ========================================= -->
        
        <!-- 
        RECOMMANDATIONS EXPERT COMPTABLE OHADA:
        
        1. COMPTE D'ENTRÉE EN STOCK (Stock Input Account):
           - Marchandises: 603 "Variation des stocks de marchandises"
           - Matières premières: 6031 "Variation des stocks de matières premières"
           - Fournitures: 6032 "Variation des autres approvisionnements"
           
        2. COMPTE DE SORTIE DE STOCK (Stock Output Account):
           - Marchandises: 603 "Variation des stocks de marchandises" (même compte)
           - Produits finis: 713 "Variation des stocks de produits"
           
        3. COMPTE DE VALORISATION DES STOCKS (Stock Valuation Account):
           - Marchandises: 31 "Marchandises"
           - Matières premières: 32 "Matières premières et fournitures liées"
           - Fournitures: 33 "Autres approvisionnements"
           - Produits finis: 35 "Stocks de produits"
           
        4. COMPTE D'ÉCART DE PRIX (Price Difference Account):
           - Méthode 1 (recommandée): 381/382 "Écarts de prix sur achats"
           - Méthode 2 (simplifiée): 658 "Charges diverses de gestion courante"
           
        PRINCIPE OHADA:
        - Les comptes 6 (Charges) et 7 (Produits) enregistrent les VARIATIONS de stocks
        - Les comptes 3 (Stocks) enregistrent la VALEUR des stocks à l'inventaire
        - Les écarts de prix peuvent être suivis séparément (381/382) ou en charges (658)
        
        CONFIGURATION PAR DÉFAUT POUR MARCHANDISES:
        - Stock Input: 603
        - Stock Output: 603
        - Stock Valuation: 31
        - Price Difference: 381 (Mali) ou 658 (simplifié)
        -->
        
    </data>
</odoo>
