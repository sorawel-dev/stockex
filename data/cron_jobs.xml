<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron: Synchronisation automatique Kobo Collect -->
        <record id="ir_cron_kobo_auto_sync" model="ir.cron">
            <field name="name">Stockex: Synchronisation Auto Kobo Collect</field>
            <field name="model_id" ref="model_stockex_kobo_config"/>
            <field name="state">code</field>
            <field name="code">
model.search([('active', '=', True), ('auto_import', '=', True)])._cron_auto_sync()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- Cron: Génération automatique de comptages cycliques -->
        <record id="ir_cron_cycle_count_scheduler" model="ir.cron">
            <field name="name">Stockex: Planificateur Comptage Cyclique</field>
            <field name="model_id" ref="model_stockex_cycle_count_scheduler"/>
            <field name="state">code</field>
            <field name="code">
model.run_scheduled_cycle_counts()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        </record>
        
        <!-- Cron: Rappels d'inventaires en cours -->
        <record id="ir_cron_inventory_reminders" model="ir.cron">
            <field name="name">Stockex: Rappels Inventaires En Cours</field>
            <field name="model_id" ref="model_stockex_stock_inventory"/>
            <field name="state">code</field>
            <field name="code">
model._send_inventory_reminders()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 09:00:00')"/>
        </record>
        
    </data>
</odoo>
