<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Stock Inventory -->
    <record id="view_stockex_inventory_tree" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.tree</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <tree string="Inventaires">
                <field name="name"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Stock Inventory -->
    <record id="view_stockex_inventory_form" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.form</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventaire">
                <header>
                    <button name="action_start" string="Démarrer" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_validate" string="Valider" type="object" states="in_progress" class="oe_highlight"/>
                    <button name="action_cancel" string="Annuler" type="object" states="draft,in_progress"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object" states="cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Référence de l'inventaire"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes d'inventaire">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="location_id"/>
                                    <field name="theoretical_qty"/>
                                    <field name="product_qty"/>
                                    <field name="difference"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="description" placeholder="Notes et observations..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View for Stock Inventory -->
    <record id="view_stockex_inventory_search" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.search</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <search string="Rechercher Inventaire">
                <field name="name"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <filter string="Brouillon" name="draft" domain="[('state','=','draft')]"/>
                <filter string="En cours" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Validé" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                    <filter string="Emplacement" name="group_location" context="{'group_by':'location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Stock Inventory -->
    <record id="action_stockex_inventory" model="ir.actions.act_window">
        <field name="name">Inventaires de Stock</field>
        <field name="res_model">stockex.stock.inventory</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_stockex_inventory_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvel inventaire de stock
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_stockex_root" name="Gestion de Stock" sequence="10" web_icon="fa fa-boxes"/>
    <menuitem id="menu_stockex_inventory" name="Inventaires" parent="menu_stockex_root" action="action_stockex_inventory" sequence="10" web_icon="fa fa-clipboard-list"/>

</odoo>
