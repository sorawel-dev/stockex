<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire de la configuration Kobo -->
    <record id="view_kobo_config_form" model="ir.ui.view">
        <field name="name">stockex.kobo.config.form</field>
        <field name="model">stockex.kobo.config</field>
        <field name="arch" type="xml">
