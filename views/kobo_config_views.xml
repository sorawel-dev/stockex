                    <button name="action_view_submissions" 
                            string="üìã Voir les Soumissions" 
                            type="object" 
                            class="btn-secondary"
                            invisible="not submissions_count"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
