<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Stock Inventory Lines -->
    <record id="view_stockex_inventory_line_list" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.line.list</field>
        <field name="model">stockex.stock.inventory.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="product_id" readonly="1"/>
                <field name="product_categ_id" readonly="1" optional="show"/>
                <field name="location_id" readonly="1"/>
                <field name="theoretical_qty" readonly="1" string="Qt√© Th√©orique"/>
                <field name="product_qty" string="Qt√© R√©elle"/>
                <field name="standard_price" readonly="1" optional="show"/>
                <field name="difference" column_invisible="1"/>
                <field name="difference_display" readonly="1"/>
                <field name="image_1" widget="image" class="oe_avatar" optional="show"/>
                <field name="image_2" widget="image" class="oe_avatar" optional="show"/>
                <field name="note" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View for Stock Inventory Lines -->
    <record id="view_stockex_inventory_line_search" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.line.search</field>
        <field name="model">stockex.stock.inventory.line</field>
        <field name="arch" type="xml">
            <search string="Rechercher Lignes">
                <field name="product_id" string="Produit"/>
                <field name="location_id" string="Emplacement"/>
                <separator/>
                <filter string="√âcarts n√©gatifs" name="negative_diff" domain="[('difference', '&lt;', 0)]"/>
                <filter string="√âcarts positifs" name="positive_diff" domain="[('difference', '&gt;', 0)]"/>
                <filter string="Pas d'√©cart" name="no_diff" domain="[('difference', '=', 0)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Emplacement" name="group_location" context="{'group_by':'location_id'}"/>
                    <filter string="Produit" name="group_product" context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- List View for Stock Inventory -->
    <record id="view_stockex_inventory_list" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.list</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <list string="Inventaires" decoration-info="state == 'draft'" decoration-primary="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancel'">
                <header>
                    <button name="%(action_import_inventory_wizard)d" string="Importer CSV" type="action" class="btn-primary" icon="fa-upload"/>
                </header>
                <field name="name"/>
                <field name="date"/>
                <field name="location_id" optional="show"/>
                <field name="total_value_theoretical" string="Valeur Th√©orique" widget="monetary" options="{'currency_field': 'company_currency_id'}" sum="Total Th√©orique"/>
                <field name="total_value_real" string="Valeur R√©elle" widget="monetary" options="{'currency_field': 'company_currency_id'}" sum="Total R√©el"/>
                <field name="odoo_stock_value" string="Valeur Stock Odoo" widget="monetary" options="{'currency_field': 'company_currency_id'}" optional="show" sum="Total Stock Odoo"/>
                <field name="total_value_difference" string="√âcart" widget="monetary" options="{'currency_field': 'company_currency_id'}" sum="Total √âcart" decoration-danger="total_value_difference &lt; 0" decoration-success="total_value_difference &gt;= 0"/>
                <field name="company_currency_id" column_invisible="1"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-primary="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <!-- Form View for Stock Inventory -->
    <record id="view_stockex_inventory_form" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.form</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventaire">
                <header>
                    <button name="action_start" string="D√©marrer" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_validate" string="Valider" type="object" invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_draft" string="üîÑ Retour Brouillon" type="object" invisible="state != 'in_progress'" class="btn-warning" groups="base.group_system"/>
                    <button name="action_refresh_theoretical_qty" string="üîÑ Recalculer Qt√© Th√©oriques" type="object" icon="fa-refresh" class="btn-info" invisible="state != 'draft'" help="Recalcule les quantit√©s th√©oriques depuis le stock Odoo actuel"/>
                    <button name="action_export_excel" string="üì• Export Excel" type="object" icon="fa-file-excel-o" class="btn-success"/>
                    <button name="action_print_pdf" string="üñ®Ô∏è Imprimer PDF" type="object" icon="fa-print" class="btn-primary"/>
                    <button name="action_draft" string="üîÑ Remettre en brouillon" type="object" invisible="state != 'cancel'" groups="base.group_system"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="R√©f√©rence de l'inventaire" readonly="state != 'draft'"/></h1>
                    </div>
                    <group name="main_info">
                        <group name="left_info">
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="location_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="is_initial_stock" readonly="state != 'draft'"/>
                        </group>
                        <group name="right_info">
                            <field name="user_id" widget="many2one_avatar_user" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <div class="row mb-2">
                        <div class="col-12 text-end">
                            <field name="state" widget="badge"/>
                        </div>
                    </div>
                    <div class="container o_kanban_card_content mt-2">
                        <div class="row g-3">
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-primary h-100">
                                    <div class="card-header bg-primary text-white"><h6 class="mb-0">üìã Valeur Th√©orique (Stock Odoo)</h6></div>
                                    <div class="card-body text-center">
                                        <h2 class="mb-0">
                                            <field name="odoo_stock_value" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                        </h2>
                                        <small class="text-muted">Valeur th√©orique du stock Odoo</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-success h-100">
                                    <div class="card-header bg-success text-white"><h6 class="mb-0">üí∞ Valeur R√©elle (Inventori√©e)</h6></div>
                                    <div class="card-body text-center">
                                        <h2 class="mb-0">
                                            <field name="total_value_real" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                        </h2>
                                        <small class="text-muted">Somme des lignes r√©elles</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-warning h-100">
                                    <div class="card-header bg-warning text-white"><h6 class="mb-0">‚ö†Ô∏è √âcart de valeur</h6></div>
                                    <div class="card-body text-center">
                                        <h2 class="mb-0">
                                            <field name="total_value_difference" widget="monetary" options="{'currency_field': 'company_currency_id'}" 
                                                   decoration-danger="total_value_difference &lt; 0" 
                                                   decoration-success="total_value_difference &gt;= 0"/>
                                        </h2>
                                        <small class="text-muted">R√©el ‚àí Th√©orique</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-secondary h-100">
                                    <div class="card-header bg-light"><h6 class="mb-0">üì¶ Quantit√© Th√©orique</h6></div>
                                    <div class="card-body text-center">
                                        <h3 class="mb-0"><field name="total_quantity_theoretical"/></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-info h-100">
                                    <div class="card-header bg-info text-white"><h6 class="mb-0">üî¢ Quantit√© R√©elle</h6></div>
                                    <div class="card-body text-center">
                                        <h3 class="mb-0"><field name="total_quantity_real"/></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-dark h-100">
                                    <div class="card-header bg-dark text-white"><h6 class="mb-0">‚àÜ √âcart Quantit√©</h6></div>
                                    <div class="card-body text-center">
                                        <h3 class="mb-0"><field name="total_quantity_difference"/></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Lignes d'inventaire" name="inventory_lines">
                            <field name="line_ids" readonly="state == 'done'" 
                                   widget="one2many" 
                                   context="{'default_inventory_id': id}"/>
                        </page>
                        <page string="üí∞ √âcritures Comptables" name="account_moves" invisible="account_move_count == 0">
                            <group>
                                <group>
                                    <field name="account_move_count" string="Nombre d'√©critures"/>
                                </group>
                            </group>
                            <field name="account_move_ids" readonly="1" context="{'tree_view_ref': 'account.view_move_tree'}"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="description" placeholder="Notes et observations..." readonly="state == 'done'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View for Stock Inventory -->
    <record id="view_stockex_inventory_search" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.search</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <search string="Rechercher Inventaire">
                <field name="name" string="R√©f√©rence" filter_domain="[('name','ilike',self)]"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state','=','draft')]"/>
                <filter string="En cours" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Valid√©" name="done" domain="[('state','=','done')]"/>
                <separator/>
                <filter string="Mes inventaires" name="my_inventories" domain="[('user_id','=',uid)]"/>
                <filter string="Ce mois" name="this_month" domain="[('date','&gt;=',context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="√âtat" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                    <filter string="Emplacement" name="group_location" context="{'group_by':'location_id'}"/>
                    <filter string="Responsable" name="group_user" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Stock Inventory -->
    <record id="action_stockex_inventory" model="ir.actions.act_window">
        <field name="name">Inventaires de Stock</field>
        <field name="res_model">stockex.stock.inventory</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_stockex_inventory_search"/>
        <field name="context">{'search_default_draft': 1, 'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouvel inventaire de stock
            </p>
            <p>
                Cliquez sur le bouton "Nouveau" pour cr√©er votre premier inventaire.
            </p>
        </field>
    </record>


</odoo>
