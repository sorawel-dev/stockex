<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Stock Inventory Lines -->
    <record id="view_stockex_inventory_line_list" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.line.list</field>
        <field name="model">stockex.stock.inventory.line</field>
        <field name="arch" type="xml">
            <list editable="bottom" decoration-warning="difference != 0">
                <field name="product_id" readonly="1"/>
                <field name="product_categ_id" readonly="1" optional="show"/>
                <field name="location_id" readonly="1"/>
                <field name="theoretical_qty" readonly="1" string="Qt√© Th√©orique" widget="integer" sum="Total Th√©orique"/>
                <field name="product_qty" string="Qt√© R√©elle" widget="integer" sum="Total R√©el"/>
                <field name="product_brand" optional="hide"/>
                <field name="product_serial" string="N¬∞ s√©rie" optional="hide"/>
                <field name="standard_price" readonly="1" optional="show"/>
                <field name="difference" column_invisible="1"/>
                <field name="difference_display" readonly="1" sum="Total √âcart"/>
                <field name="note" optional="show"/>
                <button name="action_inspect_image" string="Inspecter" type="object" icon="fa-eye" class="btn-link"/>
            </list>
        </field>
    </record>

    <record id="view_stockex_inventory_line_variance_list" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.line.variance.list</field>
        <field name="model">stockex.stock.inventory.line</field>
        <field name="arch" type="xml">
            <list string="√âcarts d'inventaire" editable="bottom" decoration-warning="difference != 0">
                <field name="product_id" readonly="1"/>
                <field name="location_id" readonly="1"/>
                <field name="theoretical_qty" string="Qt√© Th√©orique" widget="integer" sum="Total Th√©orique" readonly="1"/>
                <field name="product_qty" string="Qt√© R√©elle" widget="integer" sum="Total R√©el" readonly="1"/>
                <field name="difference" string="√âcart" sum="Total √âcart" readonly="1"/>
                <field name="standard_price" readonly="1" optional="show"/>
                <field name="note" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View for Stock Inventory Lines -->
    <record id="view_stockex_inventory_line_search" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.line.search</field>
        <field name="model">stockex.stock.inventory.line</field>
        <field name="arch" type="xml">
            <search string="Rechercher Lignes">
                <field name="product_id" string="Produit"/>
                <field name="location_id" string="Emplacement"/>
                <separator/>
                <filter string="√âcarts n√©gatifs" name="negative_diff" domain="[('difference', '&lt;', 0)]"/>
                <filter string="√âcarts positifs" name="positive_diff" domain="[('difference', '&gt;', 0)]"/>
                <filter string="Pas d'√©cart" name="no_diff" domain="[('difference', '=', 0)]"/>
                <separator/>
                <filter string="Emplacement" name="group_location" context="{'group_by':'location_id'}"/>
                <filter string="Produit" name="group_product" context="{'group_by':'product_id'}"/>
            </search>
        </field>
    </record>

    <!-- List View for Stock Inventory -->
    <record id="view_stockex_inventory_list" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.list</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <list string="Inventaires" decoration-info="state == 'draft'" decoration-primary="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancel'">
                <header>
                    <button name="%(action_import_inventory_wizard)d" string="Importer CSV" type="action" class="btn-primary" icon="fa-upload"/>
                </header>
                <field name="name"/>
                <field name="date"/>
                <field name="location_id" optional="show"/>
                <field name="total_value_theoretical" string="Valeur Th√©orique" widget="monetary" options="{'currency_field': 'company_currency_id'}" sum="Total Th√©orique"/>
                <field name="total_value_real" string="Valeur R√©elle" widget="monetary" options="{'currency_field': 'company_currency_id'}" sum="Total R√©el"/>
                <field name="odoo_stock_value" string="Valeur Stock Odoo" widget="monetary" options="{'currency_field': 'company_currency_id'}" optional="show" sum="Total Stock Odoo"/>
                <field name="total_value_difference" string="√âcart" widget="monetary" options="{'currency_field': 'company_currency_id'}" sum="Total √âcart" decoration-danger="total_value_difference &lt; 0" decoration-success="total_value_difference &gt;= 0"/>
                <field name="company_currency_id" column_invisible="1"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="state" decoration-info="state == 'draft'" decoration-primary="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <!-- Form View for Stock Inventory -->
    <record id="view_stockex_inventory_form" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.form</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventaire">
                <header>
                    <button name="action_start" string="D√©marrer" type="object" icon="fa-play" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_request_approval" string="Demander Approbation" type="object" icon="fa-check-circle" invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_approve" string="Approuver" type="object" icon="fa-thumbs-up" invisible="state != 'pending_approval'" class="oe_highlight" groups="stockex.group_stockex_manager"/>
                    <button name="action_reject" string="Rejeter" type="object" icon="fa-times-circle" invisible="state != 'pending_approval'" class="btn-danger" groups="stockex.group_stockex_manager"/>
                    <button name="action_validate" string="Valider" type="object" icon="fa-check" invisible="state != 'approved'" class="oe_highlight"/>
                    <button name="action_draft" string="Retour Brouillon" type="object" icon="fa-undo" invisible="state not in ['in_progress', 'pending_approval']" class="btn-warning" groups="base.group_system"/>
                    <button name="action_refresh_theoretical_qty" string="MAJ Qt√© Th√©o" type="object" icon="fa-refresh" class="btn-info" invisible="state != 'draft'" help="Recalcule les quantit√©s th√©oriques depuis le stock Odoo actuel"/>
                    <button name="action_export_excel" string="Export Excel" type="object" icon="fa-file-excel-o" class="btn-success" invisible="state not in ['approved', 'done']"/>
                    <button name="action_print_pdf" string="Imprimer PDF" type="object" icon="fa-print" class="btn-primary" invisible="state not in ['approved', 'done']"/>
                    <button name="action_attach_document" string="Joindre un document" type="object" icon="fa-paperclip" class="btn-secondary"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object" icon="fa-undo" invisible="state != 'cancel'" groups="base.group_system"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,pending_approval,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_stock_moves" type="object" class="oe_stat_button" icon="fa-exchange">
                            <field name="stock_move_count" widget="statinfo" string="Mouvements"/>
                        </button>
                        <button name="action_view_account_moves" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="account_move_count" widget="statinfo" string="√âcritures"/>
                        </button>
                        <button name="action_view_variances" type="object" class="oe_stat_button" icon="fa-exclamation-triangle">
                            <field name="variance_count" widget="statinfo" string="√âcarts"/>
                        </button>
                        <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-paperclip">
                            <field name="message_attachment_count" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="R√©f√©rence de l'inventaire" readonly="state != 'draft'"/></h1>
                    </div>
                    <group name="main_info">
                        <group name="left_info">
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="location_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="warehouse_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="is_initial_stock" readonly="state != 'draft'" invisible="state != 'draft'"/>
                        </group>
                        <group name="right_info">
                            <field name="user_id" widget="many2one_avatar_user" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="approver_id" widget="many2one_avatar_user" readonly="1" invisible="not approver_id"/>
                            <field name="approval_date" readonly="1" invisible="not approval_date"/>
                            <field name="validator_id" widget="many2one_avatar_user" readonly="1" invisible="not validator_id"/>
                            <field name="validation_date" readonly="1" invisible="not validation_date"/>
                            <field name="sync_to_native" readonly="1" invisible="not sync_to_native" widget="boolean" string="Synchronis√© avec Odoo Natif"/>
                            <field name="sync_date" readonly="1" invisible="not sync_date"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    
                    <div class="container o_kanban_card_content mt-2">
                        <div class="row g-3">
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-primary h-100">
                                    <div class="card-header bg-primary text-white"><h6 class="mb-0 text-center">üìã Valeur Th√©orique (FCFA)</h6></div>
                                    <div class="card-body text-center">
                                        <h2 class="mb-0">
                                            <field name="display_odoo_stock_value" nolabel="1"/>
                                        </h2>
                                        <small class="text-muted">Valeur th√©orique du stock Odoo</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-success h-100">
                                    <div class="card-header bg-success text-white"><h6 class="mb-0 text-center">üí∞ Valeur R√©elle (FCFA)</h6></div>
                                    <div class="card-body text-center">
                                        <h2 class="mb-0">
                                            <field name="display_total_value_real" nolabel="1"/>
                                        </h2>
                                        <small class="text-muted">Somme des lignes r√©elles</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-warning h-100">
                                    <div class="card-header bg-warning text-white"><h6 class="mb-0 text-center">‚ö†Ô∏è √âcart de valeur (FCFA)</h6></div>
                                    <div class="card-body text-center">
                                        <h2 class="mb-0">
                                            <span class="text-danger"><field name="display_total_value_difference" nolabel="1"/></span>
                                        </h2>
                                        <small class="text-muted">R√©el ‚àí Th√©orique</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-secondary h-100">
                                    <div class="card-header bg-light"><h6 class="mb-0 text-center">üì¶ Quantit√© Th√©orique</h6></div>
                                    <div class="card-body text-center">
                                        <h3 class="mb-0"><field name="total_quantity_theoretical" widget="integer"/></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-info h-100">
                                    <div class="card-header bg-info text-white"><h6 class="mb-0 text-center">üî¢ Quantit√© R√©elle</h6></div>
                                    <div class="card-body text-center">
                                        <h3 class="mb-0"><field name="total_quantity_real" widget="integer"/></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="card border-dark h-100">
                                    <div class="card-header bg-dark text-white"><h6 class="mb-0 text-center text-white">‚àÜ √âcart Quantit√©</h6></div>
                                    <div class="card-body text-center">
                                        <h3 class="mb-0"><field name="total_quantity_difference" widget="integer"/></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Lignes d'inventaire" name="inventory_lines">
                            <field name="line_ids" readonly="state == 'done'" 
                                   widget="one2many" 
                                   context="{'default_inventory_id': id}"/>
                        </page>
                        <page string="üí∞ √âcritures Comptables" name="account_moves" invisible="account_move_count == 0">
                            <group>
                                <group>
                                    <field name="account_move_count" string="Nombre d'√©critures"/>
                                </group>
                            </group>
                            <field name="account_move_ids" readonly="1" context="{'tree_view_ref': 'account.view_move_tree'}"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="description" placeholder="Notes et observations..." readonly="state == 'done'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
        </record>
    
    <!-- Minimal Form View for ir.attachment when attaching to Inventory -->
    <record id="view_ir_attachment_inventory_minimal" model="ir.ui.view">
        <field name="name">stockex.ir.attachment.inventory.minimal.form</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <form string="Joindre un document">
                <sheet>
                    <group>
                        <field name="name" string="Titre" placeholder="G√©n√©r√© automatiquement si laiss√© vide"/>
                        <field name="type"/>
                        <field name="datas" string="Fichier" widget="binary" invisible="type == 'url'"/>
                        <field name="url" string="Lien (URL)" invisible="type != 'url'"/>
                        <field name="description" string="Description"/>
                        <field name="res_model" readonly="1" invisible="1"/>
                        <field name="res_id" readonly="1" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue pour l'aper√ßu des documents (modal) -->
    <record id="view_ir_attachment_preview_form" model="ir.ui.view">
        <field name="name">stockex.ir.attachment.preview.form</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <form string="Aper√ßu" create="false" edit="false" delete="false">
                <sheet>
                    <field name="mimetype" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <group>
                        <field name="name" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Aper√ßu" name="preview">
                            <!-- Aper√ßu pour les images -->
                            <field name="datas" 
                                   widget="image" 
                                   options="{'size': [0, 600]}" 
                                   invisible="type != 'binary' or mimetype not in ['image/png', 'image/jpeg', 'image/jpg', 'image/gif', 'image/bmp', 'image/webp', 'image/svg+xml']"/>
                            
                            <!-- Aper√ßu pour les PDFs -->
                            <field name="datas" 
                                   widget="pdf_viewer" 
                                   invisible="mimetype != 'application/pdf'"/>
                        </page>
                        <page string="Informations" name="info">
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="file_size" readonly="1"/>
                                <field name="description" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ir_attachment_inventory_kanban" model="ir.ui.view">
        <field name="name">stockex.ir.attachment.inventory.kanban</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <kanban string="Documents" class="o_attachment_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="type"/>
                <field name="mimetype"/>
                <field name="url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record o_attachment_card">
                            <div class="o_attachment_preview">
                                <img t-if="record.type.raw_value == 'binary' and record.mimetype.raw_value and record.mimetype.raw_value.startsWith('image/')" 
                                     t-att-src="'/web/content/ir.attachment/' + record.id.raw_value + '/datas?download=false'" 
                                     class="img-fluid"/>
                                <i t-if="record.type.raw_value == 'binary' and !(record.mimetype.raw_value and record.mimetype.raw_value.startsWith('image/'))" 
                                   class="fa fa-file-o fa-2x"/>
                                <div t-if="record.type.raw_value == 'url'" class="text-truncate">
                                    <a t-att-href="record.url.raw_value" target="_blank" class="o_attachment_url">
                                        <span t-esc="record.url.raw_value"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_attachment_name mt-1">
                                <strong t-esc="record.name.raw_value"/>
                            </div>
                            <div class="o_attachment_actions mt-1">
                                <button t-if="record.type.raw_value == 'binary'" 
                                   name="action_open_preview"
                                   type="object"
                                   class="btn btn-link btn-sm">
                                    <i class="fa fa-eye"/> Aper√ßu
                                </button>
                                <a t-if="record.type.raw_value == 'url'" 
                                   t-att-href="record.url.raw_value" 
                                   target="_blank" 
                                   class="btn btn-link btn-sm">
                                    <i class="fa fa-eye"/> Ouvrir
                                </a>
                            </div>
                        </div>
                    </t>
                    <t t-name="card">
                        <t t-call="kanban-box"/>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ir_attachment_inventory_list" model="ir.ui.view">
        <field name="name">stockex.ir.attachment.inventory.list</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <list string="Documents">
                <field name="datas" widget="image" string="Miniature"/>
                <field name="name" string="Nom"/>
                <field name="type" optional="show"/>
                <field name="mimetype" optional="show"/>
                <field name="url" widget="url" optional="show"/>
                <field name="create_date" optional="show" string="Date d'ajout"/>
            </list>
        </field>
    </record>

    <record id="view_stockex_inventory_search" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.search</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="arch" type="xml">
            <search string="Rechercher Inventaire">
                <field name="name" string="R√©f√©rence" filter_domain="[('name','ilike',self)]"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state','=','draft')]"/>
                <filter string="En cours" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="En attente d'approbation" name="pending_approval" domain="[('state','=','pending_approval')]"/>
                <filter string="Approuv√©" name="approved" domain="[('state','=','approved')]"/>
                <filter string="Valid√©" name="done" domain="[('state','=','done')]"/>
                <separator/>
                <filter string="Mes inventaires" name="my_inventories" domain="[('user_id','=',uid)]"/>
                <filter string="Ce mois" name="this_month" domain="[('date','&gt;=',context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="√âtat" name="group_state" context="{'group_by':'state'}"/>
                <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                <filter string="Emplacement" name="group_location" context="{'group_by':'location_id'}"/>
                <filter string="Responsable" name="group_user" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action for Stock Inventory -->
    <record id="action_stockex_inventory" model="ir.actions.act_window">
        <field name="name">Inventaires de Stock</field>
        <field name="res_model">stockex.stock.inventory</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_stockex_inventory_search"/>
        <field name="context">{'search_default_approved': 1, 'search_default_done': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouvel inventaire de stock
            </p>
            <p>
                Cliquez sur le bouton "Nouveau" pour cr√©er votre premier inventaire.
            </p>
        </field>
    </record>

    <!-- Form View for Stock Inventory Line (Inspecter) -->
    <record id="view_stockex_inventory_line_form" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.line.form</field>
        <field name="model">stockex.stock.inventory.line</field>
        <field name="arch" type="xml">
            <form string="Inspecter Ligne d'inventaire">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                            <field name="product_qty" readonly="1"/>
                            <field name="theoretical_qty" readonly="1"/>
                            <field name="difference" readonly="1"/>
                        </group>
                        <group>
                            <field name="standard_price" readonly="1"/>
                            <field name="note" readonly="1"/>
                        </group>
                    </group>
                    <group string="Photos">
                        <group>
                            <field name="image_1" widget="image"/>
                            <field name="image_2" widget="image"/>
                            <field name="image_3" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
