        <field name="res_model">stockex.inventory.dashboard</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üìà Analyse D√©taill√©e des Inventaires
            </p>
            <p>
                Visualisez vos donn√©es d'inventaire sous forme de graphiques et tableaux crois√©s dynamiques.
            </p>
        </field>
    </record>
    
</odoo>
