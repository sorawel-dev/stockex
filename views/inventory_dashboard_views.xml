    <!-- Vue liste du Dashboard d'analyse (vue SQL) -->
    <record id="view_inventory_dashboard_list" model="ir.ui.view">
        <field name="name">stockex.inventory.dashboard.list</field>
        <field name="model">stockex.inventory.dashboard</field>
        <field name="arch" type="xml">
            <list string="Analyse Inventaires" create="false" edit="false" delete="false">
                <field name="inventory_name"/>
                <field name="inventory_date"/>
                <field name="inventory_state" widget="badge" decoration-success="inventory_state == 'done'"/>
                <field name="category_name"/>
                <field name="total_products"/>
                <field name="total_warehouses"/>
                <field name="total_quantity" sum="Total Quantit√©"/>
                <field name="total_value" sum="Total Valeur" widget="monetary"/>
                <field name="average_price" avg="Prix Moyen" widget="monetary"/>
            </list>
        </field>
    </record>
    
    <!-- Vue graphique -->
    <record id="view_inventory_dashboard_graph" model="ir.ui.view">
        <field name="name">stockex.inventory.dashboard.graph</field>
        <field name="model">stockex.inventory.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Analyse Inventaires" type="bar">
                <field name="category_name"/>
                <field name="total_value" type="measure"/>
            </graph>
        </field>
    </record>
    
    <!-- Vue pivot -->
    <record id="view_inventory_dashboard_pivot" model="ir.ui.view">
        <field name="name">stockex.inventory.dashboard.pivot</field>
        <field name="model">stockex.inventory.dashboard</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Inventaires">
                <field name="inventory_name" type="row"/>
                <field name="category_name" type="col"/>
                <field name="total_value" type="measure"/>
                <field name="total_quantity" type="measure"/>
                <field name="total_products" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <!-- Action Analyse D√©taill√©e -->
