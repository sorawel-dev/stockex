                        <field name="period_filter" required="0"/>
                        <field name="value_range" required="0"/>
                        <field name="show_differences" required="0"/>
                        <newline/>
                        <field name="date_from" invisible="period_filter != 'custom'" required="0"/>
                        <field name="date_to" invisible="period_filter != 'custom'" required="0"/>
                        <newline/>
                        <field name="category_ids" widget="many2many_tags" options="{'no_create': True}" colspan="2"/>
                        <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}" colspan="2"/>
