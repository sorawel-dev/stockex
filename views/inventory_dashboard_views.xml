                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üìä Dashboard Inventaire</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="action_view_inventories" type="object">
                                            üìã Voir les Inventaires
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <div class="row">
                                            <div class="col-12">
                                                <span class="o_stat_text">Inventaires Valid√©s</span>
                                                <span class="o_stat_value"><field name="total_inventories_done"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mt-3">
                                    <div class="col-4">
                                        <div class="o_kanban_primary_bottom">
                                            <div class="o_secondary">Produits</div>
                                            <div class="o_primary"><field name="total_products_all"/></div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="o_kanban_primary_bottom">
                                            <div class="o_secondary">Quantit√©</div>
                                            <div class="o_primary"><field name="total_quantity_all"/></div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="o_kanban_primary_bottom">
                                            <div class="o_secondary">Valeur</div>
                                            <div class="o_primary"><field name="total_value_all" widget="monetary"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Action Dashboard -->
    <record id="action_inventory_dashboard" model="ir.actions.act_window">
        <field name="name">üìä Dashboard</field>
        <field name="res_model">stockex.inventory.summary</field>
        <field name="view_mode">kanban,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üìä Tableau de Bord Inventaire
            </p>
            <p>
                Ce dashboard affiche une synth√®se de tous vos inventaires valid√©s.
                <br/>
                Cr√©ez votre premier inventaire pour voir les statistiques appara√Ætre.
            </p>
