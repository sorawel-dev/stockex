                            <button name="action_filter_high_value" 
                                    string="üíé Haute Valeur" 
                                    type="object" 
                                    class="btn btn-sm btn-outline-success ms-2"/>
                            <button name="action_filter_significant_differences" 
                                    string="‚ö†Ô∏è √âcarts Importants" 
                                    type="object" 
                                    class="btn btn-sm btn-outline-warning ms-2"/>
                        </div>
                    </div>
                    
                    <separator/>
                    
                    <!-- Statistiques Globales -->
                    <group>
                        <group string="üìà Vue d'Ensemble">
                            <field name="company_id" invisible="1"/>
                            <field name="total_inventories" readonly="1"/>
                            <field name="total_inventories_done" readonly="1"/>
                            <field name="total_products_all" readonly="1"/>
                        </group>
                        <group string="üí∞ Valeurs">
                            <field name="total_quantity_all" readonly="1"/>
                            <field name="total_value_all" readonly="1" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                        </group>
                    </group>
                    
                    <!-- Dernier Inventaire -->
                    <group string="üîÑ Dernier Inventaire" name="last_inventory">
                        <group>
                            <field name="last_inventory_id" readonly="1"/>
                            <field name="last_inventory_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_inventory_products" readonly="1"/>
                            <field name="last_inventory_value" readonly="1" widget="monetary"/>
                        </group>
                    </group>
                    
                    <!-- Analyses -->
                    <notebook>
                        <page string="üìä Top 10 Cat√©gories" name="top_categories">
                            <field name="top_categories_html" nolabel="1" readonly="1"/>
                        </page>
                        
                        <page string="üè≠ Top 10 Entrep√¥ts" name="top_warehouses">
                            <field name="top_warehouses_html" nolabel="1" readonly="1"/>
                        </page>
                        
                        <page string="üìà √âvolution" name="evolution">
                            <field name="evolution_chart_html" nolabel="1" readonly="1"/>
                        </page>
                        
                        <page string="üí° Aide" name="help">
                            <div class="alert alert-info">
                                <h4>√Ä Propos de ce Dashboard</h4>
                                <p>
                                    Ce dashboard pr√©sente une analyse compl√®te de vos inventaires valid√©s,
                                    similaire √† l'analyse Excel fournie.
                                </p>
                                
                                <h5>Statistiques Affich√©es</h5>
                                <ul>
                                    <li><strong>Vue d'Ensemble</strong> : Nombre total d'inventaires et de produits</li>
                                    <li><strong>Valeurs</strong> : Quantit√© et valeur totales de tous les stocks</li>
                                    <li><strong>Dernier Inventaire</strong> : D√©tails du dernier inventaire valid√©</li>
                                    <li><strong>Top Cat√©gories</strong> : Les 10 cat√©gories avec le plus de valeur</li>
                                    <li><strong>Top Entrep√¥ts</strong> : Les 10 entrep√¥ts avec le plus de valeur</li>
                                    <li><strong>√âvolution</strong> : Historique des 12 derniers inventaires</li>
                                </ul>
                                
                                <h5>Actualisation</h5>
                                <p>
                                    Les donn√©es sont calcul√©es en temps r√©el √† chaque ouverture du dashboard.
                                    Pour actualiser, fermez et rouvrez la page.
                                </p>
                            </div>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action pour Dashboard avec Filtres (Vue Formulaire) -->
    <record id="action_inventory_summary_form" model="ir.actions.act_window">
        <field name="name">üîç Dashboard avec Filtres</field>
        <field name="res_model">stockex.inventory.summary</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_inventory_summary_form"/>
        <field name="res_id" ref="stockex.inventory_summary_default"/>
        <field name="target">current</field>
        <field name="context">{'default_period_filter': 'all'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üîç Dashboard Interactif avec Filtres
            </p>
            <p>
                Utilisez les filtres pour analyser vos inventaires en profondeur.<br/>
                - Filtrez par p√©riode (10 options)<br/>
                - Filtrez par cat√©gorie, entrep√¥t, emplacement<br/>
                - Filtrez par plage de valeur<br/>
                - Filtrez par type d'√©carts<br/>
                - Utilisez les filtres rapides (Ce Mois, Haute Valeur, √âcarts)<br/>
                - Toutes les statistiques se mettent √† jour automatiquement
            </p>
        </field>
    </record>
    
    <!-- Vue Kanban pour le Dashboard (style cards) -->
    <record id="view_inventory_summary_kanban" model="ir.ui.view">
        <field name="name">stockex.inventory.summary.kanban</field>
        <field name="model">stockex.inventory.summary</field>
        <field name="arch" type="xml">
            <kanban create="false" edit="false" delete="false" class="o_kanban_dashboard">
                <field name="total_inventories"/>
                <field name="total_inventories_done"/>
                <field name="total_products_all"/>
                <field name="total_quantity_all"/>
                <field name="total_value_all"/>
                <field name="last_inventory_date"/>
                <field name="last_inventory_value"/>
                <templates>
