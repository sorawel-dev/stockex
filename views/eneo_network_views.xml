<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_eneo_network_list" model="ir.ui.view">
        <field name="name">stockex.eneo.network.list</field>
        <field name="model">stockex.eneo.network</field>
        <field name="arch" type="xml">
            <list string="Réseaux Interconnectés">
                <field name="name"/>
                <field name="code"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_eneo_network_form" model="ir.ui.view">
        <field name="name">stockex.eneo.network.form</field>
        <field name="model">stockex.eneo.network</field>
        <field name="arch" type="xml">
            <form string="Réseau Interconnecté">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_eneo_network" model="ir.actions.act_window">
        <field name="name">Réseaux Interconnectés</field>
        <field name="res_model">stockex.eneo.network</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
