<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="stockex.InventoryDashboard" owl="1">
        <div class="o_stockex_inventory_dashboard p-3 bg-light" style="height: 100vh; overflow-y: auto; padding-bottom: 100px !important;">
            <div class="container-fluid" style="max-width: 100%;">
                
                <!-- Header avec s√©lecteurs p√©riode et valorisation -->
                <div class="row mb-3 g-2 align-items-center">
                    <div class="col-md-6 col-12 mb-2 mb-md-0">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fa fa-dashboard" style="font-size: 2rem; margin-right: 12px; color: #667eea;"/>
                            <h2 class="mb-0 fw-bold">Dashboard Inventaire StockEx</h2>
                        </div>
                        <p class="text-muted mb-0" style="font-size: 0.9rem;">
                            <span>Monitoring et analyse des inventaires</span>
                            <span class="mx-2">‚Ä¢</span>
                            <i class="fa fa-clock-o" style="font-size: 0.85rem;"/>
                            <span style="font-size: 0.85rem;">Derni√®re mise √† jour: <strong t-esc="getLastUpdate()"/></span>
                        </p>
                    </div>
                    <div class="col-md-6 col-12 text-md-end text-start">
                        <!-- S√©lecteur p√©riode -->
                        <div class="btn-group me-2 mb-2" role="group">
                            <button type="button" 
                                    t-att-class="state.period === '30d' ? 'btn btn-sm btn-primary' : 'btn btn-sm btn-outline-primary'"
                                    t-on-click="() => this.changePeriod('30d')">
                                30 Jours
                            </button>
                            <button type="button" 
                                    t-att-class="state.period === 'ytd' ? 'btn btn-sm btn-primary' : 'btn btn-sm btn-outline-primary'"
                                    t-on-click="() => this.changePeriod('ytd')">
                                YTD
                            </button>
                            <button type="button" 
                                    t-att-class="state.period === '12m' ? 'btn btn-sm btn-primary' : 'btn btn-sm btn-outline-primary'"
                                    t-on-click="() => this.changePeriod('12m')">
                                12 Mois
                            </button>
                            <button type="button" 
                                    t-att-class="state.period === 'all' ? 'btn btn-sm btn-primary' : 'btn btn-sm btn-outline-primary'"
                                    t-on-click="() => this.changePeriod('all')">
                                Tout
                            </button>
                        </div>
                        
                        <!-- Toggle Valorisation -->
                        <button type="button" 
                                class="btn btn-sm btn-outline-info me-2 mb-2"
                                t-on-click="() => this.toggleValuationMethod()"
                                title="Basculer entre valorisation standard et √©conomique">
                            <i class="fa fa-exchange"/>
                            <span t-if="state.valuationMethod === 'standard'">Standard</span>
                            <span t-else="">√âconomique</span>
                        </button>
                        
                        <!-- Bouton refresh -->
                        <button type="button" 
                                t-att-class="state.loading ? 'btn btn-sm btn-success loading mb-2' : 'btn btn-sm btn-success mb-2'"
                                t-on-click="() => this.loadDashboardData()"
                                style="min-width: 110px;">
                            <i t-att-class="state.loading ? 'fa fa-refresh fa-spin' : 'fa fa-refresh'" style="margin-right: 6px;"/>
                            <span t-if="!state.loading">Actualiser</span>
                            <span t-if="state.loading">Chargement...</span>
                        </button>
                    </div>
                </div>
                
                <!-- Loading spinner -->
                <div t-if="state.loading and !state.data" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-3 text-muted">Chargement du dashboard...</p>
                </div>
                
                <!-- Contenu du dashboard -->
                <div t-if="state.data" class="dashboard-content">
                    
                    <!-- Section KPI Cards -->
                    <div class="row g-3 mb-4">
                        <!-- KPI 1: Valeur Inventori√©e -->
                        <div class="col-md-3 col-sm-6 col-12">
                            <div class="card shadow-sm border-0 h-100" style="border-left: 4px solid #667eea !important;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-2 text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                                <i class="fa fa-cube me-1"/> Valeur Inventori√©e
                                            </h6>
                                            <h3 class="mb-1 fw-bold text-primary" style="font-size: 1.75rem;" t-esc="formatCurrency(state.data.kpis.value_inventoried)"/>
                                            <div class="progress mt-2" style="height: 4px;">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"/>
                                            </div>
                                        </div>
                                        <div style="font-size: 3rem; line-height: 1;">
                                            üì¶
                                        </div>
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        <i class="fa fa-layer-group"/> <strong t-esc="state.data.kpis.total_lines"/> lignes inventori√©es
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- KPI 2: Valeur des √âcarts -->
                        <div class="col-md-3 col-sm-6 col-12">
                            <div class="card shadow-sm border-0 h-100" style="border-left: 4px solid #ef4444 !important;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-2 text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                                <i class="fa fa-exclamation-triangle me-1"/> Valeur des √âcarts
                                            </h6>
                                            <h3 class="mb-1 fw-bold" style="font-size: 1.75rem;" t-att-class="state.data.kpis.value_variance &lt; 0 ? 'text-danger' : 'text-success'" 
                                                t-esc="formatCurrency(state.data.kpis.value_variance)"/>
                                            <div class="progress mt-2" style="height: 4px;">
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: 100%"/>
                                            </div>
                                        </div>
                                        <div style="font-size: 3rem; line-height: 1;">
                                            ‚ö†Ô∏è
                                        </div>
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        Taux: <strong t-esc="formatPercent(state.data.kpis.variance_rate)"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- KPI 3: Taux d'Exactitude -->
                        <div class="col-md-3 col-sm-6 col-12">
                            <div class="card shadow-sm border-0 h-100" style="border-left: 4px solid #28a745 !important;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-2 text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                                <i class="fa fa-check-circle me-1"/> Taux d'Exactitude
                                            </h6>
                                            <h3 class="mb-1 fw-bold text-success" style="font-size: 1.75rem;" t-esc="formatPercent(state.data.kpis.accuracy_rate)"/>
                                            <div class="progress mt-2" style="height: 4px;">
                                                <div class="progress-bar bg-success" role="progressbar" t-att-style="'width: ' + state.data.kpis.accuracy_rate + '%'"/>
                                            </div>
                                        </div>
                                        <div style="font-size: 3rem; line-height: 1;">
                                            ‚úÖ
                                        </div>
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        <t t-esc="state.data.kpis.lines_with_variance"/> lignes avec √©cart
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- KPI 4: Inventaires Valid√©s -->
                        <div class="col-md-3 col-sm-6 col-12">
                            <div class="card shadow-sm border-0 h-100" 
                                 style="cursor: pointer; transition: all 0.2s; border-left: 4px solid #17a2b8 !important;"
                                 t-on-click="() => this.openInventoriesList()">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-2 text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                                <i class="fa fa-hand-pointer-o me-1"/> Inventaires Valid√©s
                                            </h6>
                                            <h3 class="mb-1 fw-bold text-info" style="font-size: 1.75rem;" t-esc="state.data.kpis.total_inventories"/>
                                            <div class="progress mt-2" style="height: 4px;">
                                                <div class="progress-bar bg-info" role="progressbar" style="width: 100%"/>
                                            </div>
                                        </div>
                                        <div style="font-size: 3rem; line-height: 1;">
                                            üìã
                                        </div>
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        <i class="fa fa-cube"/> <t t-esc="state.data.kpis.total_products"/> produits distincts
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section Graphiques -->
                    <div class="row g-3 mb-4">
                        <!-- Graph 1: √âvolution -->
                        <div class="col-lg-6 col-12">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0">üìà √âvolution Temporelle</h5>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <canvas t-ref="evolutionChart"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Graph 2: Performance Entrep√¥ts -->
                        <div class="col-lg-6 col-12">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0">üéØ Performance par Entrep√¥t</h5>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <canvas t-ref="warehousePerformanceChart"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row g-3 mb-4">
                        <!-- Graph 3: R√©partition Cat√©gories -->
                        <div class="col-lg-4 col-md-6 col-12">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0">üß© R√©partition Cat√©gories</h5>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <canvas t-ref="categoryDistributionChart"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Graph 4: Heatmap R√©gions -->
                        <div class="col-lg-4 col-md-6 col-12">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0">üî• Heatmap √âcarts par R√©gion</h5>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <canvas t-ref="regionHeatmapChart"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Graph 5: Tendance √âcarts -->
                        <div class="col-lg-4 col-12">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0">üîé Tendance √âcarts</h5>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <canvas t-ref="varianceTrendChart"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Graph 6: R√©partition Entrep√¥t (full width) -->
                    <div class="row g-3 mb-4">
                        <div class="col-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0">üè¢ R√©partition D√©taill√©e par Entrep√¥t</h5>
                                </div>
                                <div class="card-body" style="height: 400px;">
                                    <canvas t-ref="warehouseDistributionChart"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Tableau R√©partition Entrep√¥ts -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">üìã R√©partition par Entrep√¥t - Cliquez pour voir les inventaires</h5>
                                    <button class="btn btn-sm btn-success" t-on-click="() => this.exportWarehouseTable()">
                                        <i class="fa fa-file-excel-o"/> Export Excel
                                    </button>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Entrep√¥t</th>
                                                    <th class="text-end">Qt√© Th√©o</th>
                                                    <th class="text-end">Qt√© R√©elle</th>
                                                    <th class="text-end">√âcart Qt√©</th>
                                                    <th class="text-end">Valeur Th√©o</th>
                                                    <th class="text-end">Valeur R√©elle</th>
                                                    <th class="text-end">√âcart Valeur</th>
                                                    <th class="text-center">Statut</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="state.data.warehouse_table" t-as="row" t-key="row.id" 
                                                    style="cursor: pointer;"
                                                    t-on-click="() => this.openWarehouseInventories(row.id)">
                                                    <td class="fw-bold">
                                                        <i class="fa fa-warehouse me-2 text-primary"/>
                                                        <t t-esc="row.name"/>
                                                    </td>
                                                    <td class="text-end"><t t-esc="formatNumber(row.qty_theo)"/></td>
                                                    <td class="text-end"><t t-esc="formatNumber(row.qty_real)"/></td>
                                                    <td class="text-end" t-att-class="row.qty_variance &lt; 0 ? 'text-danger' : 'text-success'">
                                                        <t t-esc="formatNumber(row.qty_variance)"/>
                                                    </td>
                                                    <td class="text-end"><t t-esc="formatCurrency(row.value_theo)"/></td>
                                                    <td class="text-end"><t t-esc="formatCurrency(row.value_real)"/></td>
                                                    <td class="text-end" t-att-class="row.value_variance &lt; 0 ? 'text-danger' : 'text-success'">
                                                        <strong><t t-esc="formatCurrency(row.value_variance)"/></strong>
                                                    </td>
                                                    <td class="text-center">
                                                        <span t-att-class="'badge bg-' + getStatusBadge(row.status)">
                                                            <t t-esc="row.status_label"/>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot class="table-light" style="border-top: 3px solid #667eea;">
                                                <tr style="font-weight: 700; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                                    <td class="fw-bold" style="font-size: 1.05rem;">
                                                        <i class="fa fa-calculator me-2 text-primary"/> üìä TOTAL G√âN√âRAL
                                                    </td>
                                                    <td class="text-end fw-bold text-primary" t-if="state.data.warehouse_totals">
                                                        <t t-esc="formatNumber(state.data.warehouse_totals.qty_theo)"/>
                                                    </td>
                                                    <td class="text-end fw-bold text-primary" t-if="state.data.warehouse_totals">
                                                        <t t-esc="formatNumber(state.data.warehouse_totals.qty_real)"/>
                                                    </td>
                                                    <td class="text-end fw-bold" t-if="state.data.warehouse_totals" 
                                                        t-att-class="state.data.warehouse_totals.qty_variance &lt; 0 ? 'text-danger' : 'text-success'">
                                                        <t t-esc="formatNumber(state.data.warehouse_totals.qty_variance)"/>
                                                    </td>
                                                    <td class="text-end fw-bold text-primary" t-if="state.data.warehouse_totals">
                                                        <t t-esc="formatCurrency(state.data.warehouse_totals.value_theo)"/>
                                                    </td>
                                                    <td class="text-end fw-bold text-primary" t-if="state.data.warehouse_totals">
                                                        <t t-esc="formatCurrency(state.data.warehouse_totals.value_real)"/>
                                                    </td>
                                                    <td class="text-end fw-bold" t-if="state.data.warehouse_totals"
                                                        t-att-class="state.data.warehouse_totals.value_variance &lt; 0 ? 'text-danger' : 'text-success'"
                                                        style="font-size: 1.1rem;">
                                                        <t t-esc="formatCurrency(state.data.warehouse_totals.value_variance)"/>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-info">üìà CUMUL</span>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Top Variances -->
                    <div class="row mb-5">
                        <div class="col-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-white border-0">
                                    <h5 class="mb-0"><i class="fa fa-warning"/> Top 10 Plus Gros √âcarts</h5>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                                        <table class="table table-hover mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Produit</th>
                                                    <th>R√©f√©rence</th>
                                                    <th>Entrep√¥t</th>
                                                    <th class="text-end">Qt√© Th√©o</th>
                                                    <th class="text-end">Qt√© R√©elle</th>
                                                    <th class="text-end">√âcart Qt√©</th>
                                                    <th class="text-end">√âcart Valeur</th>
                                                    <th>Inventaire</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="state.data.top_variances" t-as="var" t-key="var_index">
                                                    <td><small><t t-esc="var.product_name"/></small></td>
                                                    <td><small class="badge bg-secondary"><t t-esc="var.product_code"/></small></td>
                                                    <td><small><t t-esc="var.warehouse"/></small></td>
                                                    <td class="text-end"><t t-esc="formatNumber(var.qty_theo)"/></td>
                                                    <td class="text-end"><t t-esc="formatNumber(var.qty_real)"/></td>
                                                    <td class="text-end" t-att-class="var.qty_variance &lt; 0 ? 'text-danger' : 'text-success'">
                                                        <strong><t t-esc="formatNumber(var.qty_variance)"/></strong>
                                                    </td>
                                                    <td class="text-end" t-att-class="var.value_variance &lt; 0 ? 'text-danger fw-bold' : 'text-success fw-bold'">
                                                        <t t-esc="formatCurrency(var.value_variance)"/>
                                                    </td>
                                                    <td><small><t t-esc="var.inventory_ref"/> (<t t-esc="var.inventory_date"/>)</small></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </t>
    
</templates>
