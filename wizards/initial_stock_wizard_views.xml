<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Formulaire pour Assistant Stock Initial -->
    <record id="view_initial_stock_wizard_form" model="ir.ui.view">
        <field name="name">stockex.initial.stock.wizard.form</field>
        <field name="model">stockex.initial.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Assistant Stock Initial">
                <field name="state" invisible="1"/>
                <field name="progress" invisible="1"/>
                
                <!-- Barre de progression -->
                <div class="alert alert-info" role="status" invisible="progress == 0.0">
                    <div style="margin-bottom: 10px;">
                        <strong>üîÑ <field name="progress_message" readonly="1" nolabel="1"/></strong>
                    </div>
                    <div style="background: #e9ecef; border-radius: 5px; height: 30px; overflow: hidden; position: relative;">
                        <div style="background: linear-gradient(90deg, #28a745 0%, #20c997 100%); height: 100%; display: flex; align-items: center; justify-content: center; transition: width 0.3s ease;">
                            <span style="color: white; font-weight: bold; font-size: 14px; position: absolute; left: 50%; transform: translateX(-50%); z-index: 1;">
                                <field name="progress" widget="percentage" nolabel="1"/>
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- √âtape 1 : Import -->
                <group invisible="state != 'step1'">
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="location_id" options="{'no_create': True}"/>
                        <label for="location_id" string="" invisible="1"/>
                        <div class="text-muted" style="font-size: 11px; margin-top: -8px;">
                            <i>‚ö†Ô∏è Optionnel : Utilis√© uniquement si la colonne ENTREPOT est absente du fichier Excel</i>
                        </div>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="create_products"/>
                        <field name="create_categories"/>
                        <field name="create_warehouses"/>
                    </group>
                </group>
                
                <group string="‚ö†Ô∏è Options Avanc√©es (DANGER)" invisible="state != 'step1'">
                    <field name="force_reset" 
                           widget="boolean_toggle"
                           class="text-danger"/>
                    <div class="alert alert-danger" role="alert" invisible="not force_reset" style="margin: 10px 0;">
                        <strong>üî• ATTENTION - ACTION IRR√âVERSIBLE !</strong><br/>
                        Cette option va :<br/>
                        ‚Ä¢ ‚ùå Supprimer TOUS les mouvements de stock<br/>
                        ‚Ä¢ ‚ùå Remettre TOUTES les quantit√©s √† 0<br/>
                        ‚Ä¢ ‚ùå Effacer tout l'historique de stock<br/><br/>
                        <strong style="color: #dc3545;">‚ö†Ô∏è NE PAS UTILISER EN PRODUCTION</strong> sauf r√©initialisation compl√®te volontaire.
                    </div>
                </group>
                
                <group string="Import Excel (Optionnel)" invisible="state != 'step1'">
                    <p class="text-muted">
                        <strong>Format du fichier Excel :</strong><br/>
                        Colonnes requises : CODE PRODUIT, NOM PRODUIT, QUANTITE, PRIX UNITAIRE<br/>
                        Colonnes optionnelles : CATEGORIE, CODE CATEGORIE, <strong style="color: #00A09D;">ENTREPOT</strong><br/>
                        <i>Si aucun fichier n'est fourni, vous pourrez ajouter les lignes manuellement apr√®s cr√©ation.</i><br/>
                        <strong style="color: #00A09D;">‚úÖ Multi-entrep√¥ts support√© :</strong> Une ligne par produit/entrep√¥t
                    </p>
                    <field name="filename" invisible="1"/>
                    <field name="import_file" filename="filename"/>
                </group>
                
                <div class="alert alert-warning" role="alert" invisible="state != 'step1'">
                    <strong>‚ö†Ô∏è ATTENTION :</strong> Cet assistant est destin√© aux <strong>bases de donn√©es VIDES</strong> (sans stock existant).<br/>
                    Il cr√©era un inventaire initial avec quantit√©s th√©oriques = 0 et quantit√©s r√©elles = vos donn√©es.<br/>
                    Pour une base avec stock existant, utilisez un inventaire normal.
                </div>
                
                <div class="alert alert-info" role="alert" invisible="state != 'step1'">
                    <strong>üìß üí¨ üì± Notifications :</strong> Les notifications par Email, WhatsApp et Telegram sont configur√©es dans 
                    <strong>Configuration ‚Üí Param√®tres ‚Üí Gestion d'Inventaire</strong>.
                </div>
                
                <!-- √âtape 2 : Pr√©visualisation -->
                <group invisible="state != 'step2'">
                    <field name="preview_summary" nolabel="1" widget="html"/>
                </group>
                
                <footer>
                    <!-- Boutons √©tape 1 -->
                    <button name="action_preview" type="object" string="üîç Pr√©visualiser" class="btn-primary" 
                            invisible="state != 'step1' or not import_file"/>
                    <button name="action_create_initial_stock" type="object" string="Cr√©er Stock Initial" class="btn-primary" 
                            invisible="state != 'step1' or import_file"/>
                    
                    <!-- Boutons √©tape 2 -->
                    <button name="action_back" type="object" string="‚Üê Retour" class="btn-secondary" 
                            invisible="state != 'step2'"/>
                    <button name="action_create_initial_stock" type="object" string="‚úÖ Confirmer l'import" class="btn-primary" 
                            invisible="state != 'step2'"/>
                    
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action pour l'Assistant Stock Initial -->
    <record id="action_initial_stock_wizard" model="ir.actions.act_window">
        <field name="name">Stock Initial</field>
        <field name="res_model">stockex.initial.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_stockex_stock_inventory"/>
    </record>
    
    <!-- Ajout du Champ Comptabilit√© dans la Vue Formulaire Inventaire -->
    <record id="view_stockex_inventory_form_accounting" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.form.accounting</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="inherit_id" ref="stockex.view_stockex_inventory_form"/>
        <field name="arch" type="xml">
            
            <!-- Ajouter le champ comptabilit√© apr√®s company_id -->
            <field name="company_id" position="after">
                <field name="accounting_enabled" groups="account.group_account_user"/>
            </field>
            
            <!-- Ajouter un onglet pour les √©critures comptables -->
            <xpath expr="//notebook" position="inside">
                <page string="√âcritures Comptables" name="accounting" groups="account.group_account_user" invisible="not accounting_enabled or state != 'done'">
                    <field name="move_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="journal_id"/>
                            <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'"/>
                            <field name="amount_total"/>
                        </list>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>
    
    <!-- Menu pour Stock Initial d√©plac√© dans views/menus.xml -->
        
</odoo>
