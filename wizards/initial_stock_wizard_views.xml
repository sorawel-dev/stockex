<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Formulaire pour Assistant Stock Initial -->
    <record id="view_initial_stock_wizard_form" model="ir.ui.view">
        <field name="name">stockex.initial.stock.wizard.form</field>
        <field name="model">stockex.initial.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Assistant Stock Initial">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="location_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="create_products"/>
                    </group>
                </group>
                
                <group string="Import Excel (Optionnel)">
                    <p class="text-muted">
                        <strong>Format du fichier Excel :</strong><br/>
                        Colonnes requises : CODE PRODUIT, PRODUIT, QUANTITE, PRIX UNITAIRE<br/>
                        <i>Si aucun fichier n'est fourni, vous pourrez ajouter les lignes manuellement après création.</i>
                    </p>
                    <field name="filename" invisible="1"/>
                    <field name="import_file" filename="filename"/>
                </group>
                
                <div class="alert alert-warning" role="alert">
                    <strong>⚠️ ATTENTION :</strong> Cet assistant est destiné aux <strong>bases de données VIDES</strong> (sans stock existant).<br/>
                    Il créera un inventaire initial avec quantités théoriques = 0 et quantités réelles = vos données.<br/>
                    Pour une base avec stock existant, utilisez un inventaire normal.
                </div>
                
                <footer>
                    <button name="action_create_initial_stock" type="object" string="Créer Stock Initial" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action pour l'Assistant Stock Initial -->
    <record id="action_initial_stock_wizard" model="ir.actions.act_window">
        <field name="name">Stock Initial</field>
        <field name="res_model">stockex.initial.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_stockex_stock_inventory"/>
    </record>
    
    <!-- Ajout du Champ Comptabilité dans la Vue Formulaire Inventaire -->
    <record id="view_stockex_inventory_form_accounting" model="ir.ui.view">
        <field name="name">stockex.stock.inventory.form.accounting</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="inherit_id" ref="stockex.view_stockex_inventory_form"/>
        <field name="arch" type="xml">
            
            <!-- Ajouter le champ comptabilité après company_id -->
            <field name="company_id" position="after">
                <field name="accounting_enabled" groups="account.group_account_user"/>
            </field>
            
            <!-- Ajouter un onglet pour les écritures comptables -->
            <xpath expr="//notebook" position="inside">
                <page string="Écritures Comptables" name="accounting" groups="account.group_account_user" invisible="not accounting_enabled or state != 'done'">
                    <field name="move_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="journal_id"/>
                            <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'"/>
                            <field name="amount_total"/>
                        </list>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>
    
    <!-- Menu pour Stock Initial -->
    <menuitem 
        id="menu_initial_stock_wizard"
        name="Stock Initial"
        parent="stock.menu_stock_config_settings"
        action="action_initial_stock_wizard"
        sequence="100"
        groups="stock.group_stock_manager"/>
        
</odoo>
