<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Formulaire Import Flexible -->
    <record id="view_import_flexible_inventory_wizard_form" model="ir.ui.view">
        <field name="name">stockex.import.flexible.inventory.wizard.form</field>
        <field name="model">stockex.import.flexible.inventory.wizard</field>
        <field name="arch" type="xml">
            <form string="Import d'Inventaire">
                <field name="state" invisible="1"/>
                
                <!-- Étape 1: Configuration -->
                <group invisible="state != 'draft'">
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="filename" invisible="1"/>
                        <field name="file" filename="filename"/>
                        <field name="manual_warehouse_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="create_products"/>
                        <field name="create_categories"/>
                        <field name="create_warehouses"/>
                        <field name="create_locations"/>
                        <field name="update_prices"/>

                    </group>
                </group>
                
                <group string="Multi-Entrepôts" invisible="state != 'draft'">
                    <field name="multi_warehouse_mode" widget="radio"/>

                </group>
                

                
                <!-- Étape 2: Prévisualisation -->
                <group invisible="state != 'preview'">
                    <field name="preview_summary" nolabel="1" widget="html"/>
                </group>
                
                <footer>
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                        <div>
                            <button name="action_preview" type="object" string="Prévisualiser" class="btn-secondary me-2" invisible="state != 'draft'"/>
                            <button name="action_import" type="object" string="Confirmer l'Import" class="btn-primary" invisible="state != 'preview'"/>
                        </div>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action Wizard -->
    <record id="action_import_flexible_inventory_wizard" model="ir.actions.act_window">
        <field name="name">Import Inventaire (Excel/CSV)</field>
        <field name="res_model">stockex.import.flexible.inventory.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>
