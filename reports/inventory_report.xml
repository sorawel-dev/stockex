<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Template PDF -->
    <record id="action_report_inventory" model="ir.actions.report">
        <field name="name">Inventaire de Stock</field>
        <field name="model">stockex.stock.inventory</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">stockex.report_inventory_document</field>
        <field name="report_file">stockex.report_inventory_document</field>
        <field name="binding_model_id" ref="model_stockex_stock_inventory"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
    
    <!-- Template PDF -->
    <template id="report_inventory_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .footer { margin-bottom: 1.5cm !important; }
                    </style>
                    <div class="page" style="font-size: 10pt; font-family: 'Calibri', Arial, sans-serif;">
                        <!-- En-tête du rapport -->
                        <div class="row mb-4">
                            <div class="col-8">
                                <h2>INVENTAIRE DE STOCK</h2>
                                <h3 t-field="o.name"/>
                            </div>
                            <div class="col-4 text-end">
                                <span class="badge" t-att-class="'badge-success' if o.state == 'done' else 'badge-warning'">
                                    <t t-if="o.state == 'draft'">Brouillon</t>
                                    <t t-if="o.state == 'in_progress'">En cours</t>
                                    <t t-if="o.state == 'done'">Validé</t>
                                    <t t-if="o.state == 'cancel'">Annulé</t>
                                </span>
                            </div>
                        </div>
                        
                        <!-- Informations générales -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Date :</strong> <span t-field="o.date"/><br/>
                                <strong>Responsable :</strong> <span t-field="o.user_id"/><br/>
                                <t t-if="o.location_id">
                                    <strong>Emplacement :</strong> <span t-field="o.location_id"/><br/>
                                </t>
                            </div>
                            <div class="col-6">
                                <strong>Société :</strong> <span t-field="o.company_id"/><br/>
                                <strong>Nombre de produits :</strong> <t t-esc="len(o.line_ids)"/><br/>
                            </div>
                        </div>
                        
                        <!-- Tableau des lignes -->
                        <table class="table table-sm table-bordered" style="font-size: 9pt; font-family: 'Calibri', Arial, sans-serif;">
                            <thead style="background-color: #28a745; color: white; font-size: 11.5pt; font-weight: bold; text-align: center;">
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Produit</th>
                                    <th class="text-center">Réf.</th>
                                    <th class="text-center">Entrepôt</th>
                                    <th class="text-center">Qté Théo.</th>
                                    <th class="text-center">Qté Réelle</th>
                                    <th class="text-center">Écart</th>
                                    <th class="text-center">Prix (FCFA)</th>
                                    <th class="text-center">Valeur Écart (FCFA)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_theoretical" t-value="0"/>
                                <t t-set="total_real" t-value="0"/>
                                <t t-set="total_diff_value" t-value="0"/>
                                <t t-set="line_number" t-value="0"/>
                                
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <t t-set="line_number" t-value="line_number + 1"/>
                                    <td class="text-center"><t t-esc="line_number"/></td>
                                    <td><span t-field="line.product_id"/></td>
                                    <td><span t-field="line.product_id.default_code"/></td>
                                    <td class="text-center"><small><span t-field="line.location_id.warehouse_id"/></small></td>
                                    <td class="text-end"><t t-esc="'{:,.0f}'.format(line.theoretical_qty).replace(',', ' ')"/></td>
                                    <td class="text-end"><t t-esc="'{:,.0f}'.format(line.product_qty).replace(',', ' ')"/></td>
                                    <td class="text-end">
                                        <span t-esc="'{:,.0f}'.format(line.difference).replace(',', ' ')" 
                                              t-att-class="'text-success fw-bold' if line.difference > 0 else ('text-danger fw-bold' if line.difference &lt; 0 else '')"/>
                                    </td>
                                    <td class="text-end"><t t-esc="'{:,.0f}'.format(line.standard_price).replace(',', ' ')"/></td>
                                    <td class="text-end">
                                        <t t-set="diff_value" t-value="line.difference * line.standard_price"/>
                                        <span t-esc="'{:,.0f}'.format(diff_value).replace(',', ' ')" 
                                              t-att-class="'text-success fw-bold' if diff_value > 0 else ('text-danger fw-bold' if diff_value &lt; 0 else '')"/>
                                        <t t-set="total_theoretical" t-value="total_theoretical + line.theoretical_qty"/>
                                        <t t-set="total_real" t-value="total_real + line.product_qty"/>
                                        <t t-set="total_diff_value" t-value="total_diff_value + diff_value"/>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot style="background-color: #d4edda; font-weight: bold; border: 2px solid #28a745; font-size: 11.4pt;">
                                <tr>
                                    <td colspan="4" class="text-end">TOTAUX :</td>
                                    <td class="text-end"><t t-esc="'{:,.0f}'.format(total_theoretical).replace(',', ' ')"/></td>
                                    <td class="text-end"><t t-esc="'{:,.0f}'.format(total_real).replace(',', ' ')"/></td>
                                    <td class="text-end">
                                        <span t-esc="'{:,.0f}'.format(total_real - total_theoretical).replace(',', ' ')"
                                              t-att-class="'text-success' if (total_real - total_theoretical) > 0 else ('text-danger' if (total_real - total_theoretical) &lt; 0 else '')"/>
                                    </td>
                                    <td></td>
                                    <td class="text-end">
                                        <span t-esc="'{:,.0f}'.format(total_diff_value).replace(',', ' ')"
                                              t-att-class="'text-success' if total_diff_value > 0 else ('text-danger' if total_diff_value &lt; 0 else '')"/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        
                        <!-- Résumé des écarts -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 style="font-size: 11pt;">Résumé des Écarts</h4>
                                <table class="table table-sm" style="font-size: 9pt;">
                                    <tr>
                                        <td width="40%"><strong>Valeur Totale des Écarts :</strong></td>
                                        <td class="text-end">
                                            <span t-esc="'{:,.0f}'.format(total_diff_value).replace(',', ' ')"/> FCFA
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Nombre de lignes avec écarts :</strong></td>
                                        <td class="text-end">
                                            <t t-esc="len(o.line_ids.filtered(lambda l: l.difference != 0))"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Lignes sans écart :</strong></td>
                                        <td class="text-end">
                                            <t t-esc="len(o.line_ids.filtered(lambda l: l.difference == 0))"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Notes -->
                        <t t-if="o.description">
                            <div class="row mt-4">
                                <div class="col-12">
                                    <h4 style="font-size: 11pt;">Notes</h4>
                                    <p style="font-size: 9pt;" t-field="o.description"/>
                                </div>
                            </div>
                        </t>
                        
                        <!-- Signatures -->
                        <div class="row mt-5" style="font-size: 9pt;">
                            <div class="col-6">
                                <p><strong>Responsable de l'inventaire</strong></p>
                                <p class="mt-5">_______________________</p>
                                <p><span t-field="o.user_id"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Validé par</strong></p>
                                <p class="mt-5">_______________________</p>
                                <p>Date : <span t-field="o.date"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    
